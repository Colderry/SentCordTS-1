{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "declarationMap": true,
    "incremental": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src/**/**/*.ts"
  ],
}